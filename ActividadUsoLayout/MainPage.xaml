<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActividadUsoLayout.MainPage">

    <Grid RowDefinitions="4*,2*,*"
          ColumnDefinitions="*,*">
        <BoxView Grid.Row="0" Grid.Column="0" Color="Green"/>
        <Label Text="Row 0,Column 0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>

        <BoxView Grid.Row="0" Grid.Column="1" Color="Blue"/>
        <Label Text="Row 0,Column 1" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0" Grid.Column="1"/>
        
         <BoxView Grid.Row="1" Grid.Column="0" Color="Cyan" />
        <Label Text="Row 1,Column 0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1" Grid.Column="0"/>

        <BoxView Grid.Row="1" Grid.Column="1" Color="Purple" />
        <Label Text="Row 1,Column 1" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1" Grid.Column="1"/>
        
        <BoxView Grid.Row="2" Grid.Column="0" Color="Red" Grid.ColumnSpan="2"/>
        <Label Text="Row 2,Column 0" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
        
        
    </Grid>

</ContentPage>
